{
	"$schema": "https://json.schemastore.org/tsconfig",
	"_version": "22.0.0",

	"compilerOptions": {
		"lib": ["es2023"],
		"module": "es2022",
		"target": "es2022",

		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"allowJs": true
	},
	"exclude": ["./build/**/*"]
}
